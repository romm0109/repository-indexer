# App
PORT=3000

# GitLab
GITLAB_URL=https://gitlab.com
GITLAB_TOKEN=your_gitlab_token

# Qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key

# Embedding (OpenAI)
EMBEDDING_URL=https://api.openai.com/v1
EMBEDDING_API_KEY=your_openai_api_key
EMBEDDING_MODEL_NAME=text-embedding-3-small
EMBEDDING_VECTOR_SIZE=1536
EMBEDDING_RETRIES=3
EMBEDDING_RETRY_DELAY=1000
EMBEDDING_BATCH_SIZE=1

# Chunking
CHUNK_SIZE=256
CHUNK_OVERLAP=32

# Reranker (Optional)
RERANKER_URL=
RERANKER_API_KEY=
RERANKER_MODEL_NAME=

# Query Refinement (Optional)
REFINE_URL=
REFINE_API_KEY=
REFINE_MODEL_NAME=

# MCP Server (Optional)
MCP_ENABLED=false
MCP_TRANSPORT=stdio
MCP_SERVER_NAME=code-indexer
MCP_SERVER_VERSION=1.0.0

# MCP SSE Transport (when MCP_TRANSPORT=sse)
MCP_SSE_ENDPOINT=/mcp/message
MCP_SSE_PORT=3000